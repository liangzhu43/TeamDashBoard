<style>
table {
    width:80%;
}
table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
th, td {
    padding: 5px;
    text-align: left;
}
table#t01 tr:nth-child(even) {
    background-color: #eee;
}
table#t01 tr:nth-child(odd) {
   background-color:#fff;
}
table#t01 th	{
    background-color: black;
    color: white;
}
</style>

<h1>Member satisfactions Index!</h1>

<%= link_to 'New satisfaction', new_satisfaction_path %>

<table id="t01">
  <tr>
    <th>ID</th>
    <th>Date</th>
    <th>Name</th>
    <th>Category</th>
    <th>Score</th>
  </tr>
<% @satisfactions.each do |satisfaction| %>
  <tr>
    <td><%= satisfaction.id %></td>
    <td><%= satisfaction.name %></td>
    <td><%= satisfaction.date %></td>
    <td><%= satisfaction.category %></td>
    <td><%= satisfaction.score %></td>
  </tr>
<% end %>
</table>
